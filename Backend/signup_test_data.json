{
  "signup_test_data": {
    "admin_signup_examples": [
      {
        "description": "Admin signup with manager role",
        "method": "POST",
        "url": "http://localhost:3000/api/signup",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "admin_user",
          "password": "admin123456",
          "role": "manager"
        },
        "expected_response": {
          "status": 201,
          "body": {
            "message": "User created successfully",
            "token": "jwt_token_here",
            "user": {
              "id": "user_id_here",
              "username": "admin_user",
              "role": "manager"
            }
          }
        }
      },
      {
        "description": "Another admin signup",
        "method": "POST",
        "url": "http://localhost:3000/api/signup",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "super_admin",
          "password": "super123456",
          "role": "manager"
        }
      },
      {
        "description": "Admin signup without specifying role (should default to employee)",
        "method": "POST",
        "url": "http://localhost:3000/api/signup",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "default_admin",
          "password": "default123"
        }
      }
    ],
    "employee_signup_examples": [
      {
        "description": "Employee signup with employee role",
        "method": "POST",
        "url": "http://localhost:3000/api/signup",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "employee_user",
          "password": "employee123456",
          "role": "employee"
        },
        "expected_response": {
          "status": 201,
          "body": {
            "message": "User created successfully",
            "token": "jwt_token_here",
            "user": {
              "id": "user_id_here",
              "username": "employee_user",
              "role": "employee"
            }
          }
        }
      },
      {
        "description": "Another employee signup",
        "method": "POST",
        "url": "http://localhost:3000/api/signup",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "worker1",
          "password": "worker123456",
          "role": "employee"
        }
      },
      {
        "description": "Employee signup without specifying role (should default to employee)",
        "method": "POST",
        "url": "http://localhost:3000/api/signup",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "default_employee",
          "password": "default123"
        }
      }
    ],
    "error_test_cases": [
      {
        "description": "Signup with existing username (should fail)",
        "method": "POST",
        "url": "http://localhost:3000/api/signup",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "admin",
          "password": "admin123456",
          "role": "manager"
        },
        "expected_response": {
          "status": 400,
          "body": {
            "message": "Username already exists"
          }
        }
      },
      {
        "description": "Signup with short password (should fail)",
        "method": "POST",
        "url": "http://localhost:3000/api/signup",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "short_pass_user",
          "password": "123",
          "role": "employee"
        },
        "expected_response": {
          "status": 400,
          "body": {
            "message": "Validation error message"
          }
        }
      },
      {
        "description": "Signup with short username (should fail)",
        "method": "POST",
        "url": "http://localhost:3000/api/signup",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "ab",
          "password": "password123",
          "role": "employee"
        },
        "expected_response": {
          "status": 400,
          "body": {
            "message": "Validation error message"
          }
        }
      },
      {
        "description": "Signup with invalid role (should fail)",
        "method": "POST",
        "url": "http://localhost:3000/api/signup",
        "headers": {
          "Content-Type": "application/json"
        },
        "body": {
          "username": "invalid_role_user",
          "password": "password123",
          "role": "invalid_role"
        },
        "expected_response": {
          "status": 400,
          "body": {
            "message": "Validation error message"
          }
        }
      }
    ]
  },
